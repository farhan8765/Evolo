Options -MultiViews
RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# NEW: Force clean homepage - redirect ANY query string to /
RewriteCond %{REQUEST_URI} ^/?$ [NC]
RewriteCond %{QUERY_STRING} .+ 
RewriteRule ^(.*)$ /? [R=301,L]

# Block specific spam parameters (keep for other pages)
RewriteCond %{QUERY_STRING} ^k= [NC]
RewriteRule ^(.*)$ /$1? [R=301,L]

RewriteCond %{QUERY_STRING} (utm_source=|ref=|click_id=) [NC]
RewriteRule ^(.*)$ /$1? [R=301,L]

# Standard React SPA routing (LAST)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]